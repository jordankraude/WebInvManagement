@page
@namespace WebInvManagement.Pages
@model ViewInventoryModel
@{
    ViewData["Title"] = "Inventory Review";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Barcode</th>
            <th>Weight</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.Barcode</td>
                <td>@product.Weight</td>
            </tr>
        }
    </tbody>
</table>
