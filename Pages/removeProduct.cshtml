@page
@namespace WebInvManagement.Pages
@model RemoveProductModel
@{
    ViewData["Title"] = "Product Removal";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Barcode</th>
                <th>Weight</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td><input type="checkbox" name="SelectedProducts" value="@product.Id" /></td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Barcode</td>
                    <td>@product.Weight</td>
                </tr>
            }
        </tbody>
    </table>

    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Delete Selected Products</button>
</form>
